# ; -*- mode: Shell-Script;-*-

argument_count=1
usage="Usus: 4-domus <vox>"

function run {
    local -r word="$1"
    local -r stem="${word%us}"

    echo "${stem}us"
    echo "${stem}us"
    echo "${stem}um"
    echo "${stem}ūs"
    echo "${stem}uī"
    echo "${stem}ō"
    echo "${stem}ūs"
    echo "${stem}ūs"
    echo "${stem}ōs"
    echo "${stem}uum"
    echo "${stem}ibus"
    echo "${stem}ibus"

    echo "4-domus"
}
